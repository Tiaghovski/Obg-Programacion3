@model ObligatorioMVC.Models.Usuario
@{
    ViewBag.Title = "Obligatorio MVC";
}
<h2 style="color:darkred; font-family:Century"><b><u>Bienvenido a Obligatorio MVC</u></b></h2>
@using (Html.BeginForm())
{
  

    <div class="form-horizontal">
        <br />
        <h4 style="color:dodgerblue; font-family:Verdana">Para ingresar al sistema debe logearse</h4><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model.NombreUsuario)
        @Html.EditorFor(model => model.NombreUsuario)
        @Html.ValidationMessageFor(model => model.NombreUsuario)
        <br /><br />
        @Html.LabelFor(model => model.Clave)
        @Html.EditorFor(model => model.Clave)
        @Html.ValidationMessageFor(model => model.Clave)
       <br /><br />
        <input type="submit" value="Ingresar" class="btn btn-default" />
        </div>
        }
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

